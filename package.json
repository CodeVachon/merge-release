{
  "name": "@codevachon/merge-branch",
  "version": "0.1.0",
  "description": "script to automate my git release process",
  "main": "index.js",
  "scripts": {
    "bootstrap": "./bootstrap.sh",
    "dev": "yarn bootstrap && ts-node src/cli -c $(pwd)/test-repo ",
    "start": "yarn build && node dist/cli.js",
    "clean": "rm -fr dist pkg",
    "build": "tsc",
    "package": "pkg . ",
    "full": "yarn clean && yarn build && yarn package",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch -o ",
    "docs": "yarn clean && typedoc src/index.ts",
    "serve-docs": "yarn docs && http-server ./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeVachon/merge-release.git"
  },
  "author": "Christopher Vachon <code@christophervachon.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeVachon/merge-release/issues"
  },
  "homepage": "https://github.com/CodeVachon/merge-release#readme",
  "bin": "./dist/cli.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Colossal.flf",
      "lib/**/*.js"
    ],
    "targets": [
      "node16-macos-arm64"
    ],
    "outputPath": "pkg"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.2",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.8",
    "@types/yargs": "^17.0.13",
    "jest": "^29.2.2",
    "jest-extended": "^3.1.0",
    "pkg": "^5.8.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "chalk": "4",
    "dayjs": "^1.11.6",
    "execa": "5",
    "figlet": "^1.5.2",
    "inquirer": "8",
    "yargs": "^17.6.0"
  }
}
